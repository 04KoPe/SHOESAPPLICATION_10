<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/shoesIMG"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/fb"
            android:layout_centerVertical="true"
            app:civ_border_color="#FF000000">
        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/shoesName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shoes Name"
            android:layout_toRightOf="@id/shoesIMG"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textSize="25sp">

        </TextView>


        <TextView
            android:id="@+id/shoesOldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Old Price"
            android:layout_toRightOf="@id/shoesIMG"
            android:layout_below="@id/shoesName"
            android:layout_marginLeft="15dp"
            android:textSize="20sp">

        </TextView>

        <TextView
            android:id="@+id/shoesNewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shoesIMG"
            android:layout_below="@+id/shoesOldPrice"
            android:text="New Price"
            android:layout_marginLeft="15dp"
            android:textSize="20sp">

        </TextView>

        <TextView
            android:id="@+id/shoesQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shoesIMG"
            android:layout_below="@+id/shoesNewPrice"
            android:text="Quantity"
            android:layout_marginLeft="15dp"
            android:textSize="20sp">

        </TextView>

    </RelativeLayout>



</androidx.cardview.widget.CardView>