        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_shoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nike_1"></ImageView>
    </LinearLayout>

    <ScrollView
