<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/bgfooter">


        <ImageView
            android:id="@+id/img_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/back"
            android:layout_marginTop="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/txt_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cart(4)"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/txt_fix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fix"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/message"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:id="@+id/message"
            android:layout_width="26dp"
            android:layout_height="24dp"
            android:src="@drawable/messenger"
            android:layout_marginTop="35dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="10dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    //freeship

    <LinearLayout
        android:id="@+id/freeship"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/header"
        android:background="@color/blue_button"
        android:orientation="horizontal">

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="FREE\nSHIP"
            android:textAlignment="center"
            android:textColor="#0D45E0"
            android:textSize="8sp"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Don't miss the freeship code in the TENSHOES voucher"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"/>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/freeship"
        android:layout_above="@+id/footer"/>
    //footer

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bgfooter">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:src="@drawable/voucher"
                    android:tint="@color/blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TENSHOES voucher"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Choose or enter code"
                    android:textColor="#838383"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right_24dp"
                    android:tint="@color/gray"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="horizontal"
                android:weightSum="4">
                <CheckBox
                    android:id="@+id/all_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:textSize="15sp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                     android:text="Subtotal"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/txt_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ä‘ 0"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btn_checkout"
                    android:layout_width="15dp"
                    android:layout_height="50dp"
                    android:background="@color/blue_button"
                    android:text="Checkout"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:paddingHorizontal="10dp"
                    android:layout_weight="1"
                    android:clickable="true"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
