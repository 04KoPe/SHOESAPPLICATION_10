<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sneaker"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/top"
            android:background="#F6F3F3">

            <ImageView
                android:id="@+id/img_type"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/nike_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_typeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sneakers"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/img_type"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_typeAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(0)"
                android:textColor="#8C8383"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/txt_typeName"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgdetail"
                android:layout_width="60dp"
                android:layout_height="41dp"
                android:layout_marginLeft="55dp"
                android:src="@drawable/ic_arrow_right_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</LinearLayout>