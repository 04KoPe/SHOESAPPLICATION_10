<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataFirebase.Seed">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue">

        <TextView
            android:id="@+id/instructionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insert data to Firebase here"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            >

        </TextView>


        <EditText
            android:id="@+id/shoesIMGInsert"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/instructionText"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/border"
            android:hint="Shoes Image"
            android:textStyle="bold"
            android:textAlignment="center"></EditText>

        <EditText
            android:id="@+id/shoesNameInsert"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/shoesIMGInsert"
            android:background="@drawable/border"
            android:hint="Shoes Image"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:textStyle="bold"
            >


        </EditText>

        <EditText
            android:id="@+id/shoesSizeInsert"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/shoesNameInsert"
            android:background="@drawable/border"
            android:hint="Shoes Image"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:textStyle="bold">

        </EditText>

        <EditText
            android:id="@+id/shoesQuantityInsert"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/shoesSizeInsert"
            android:background="@drawable/border"
            android:hint="Shoes Image"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:textStyle="bold">

        </EditText>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/insertBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shoesQuantityInsert"
            android:layout_centerHorizontal="true"
            android:background="@drawable/border"
            android:layout_marginTop="30dp"
            android:text="Insert"
            android:textStyle="bold"
            >

        </androidx.appcompat.widget.AppCompatButton>

    </RelativeLayout>

</LinearLayout>