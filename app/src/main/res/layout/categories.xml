<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    tools:context=".categories">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#F6F3F3"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/headertop"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/cart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/cart"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <androidx.cardview.widget.CardView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    app:cardBackgroundColor="@color/red"
                    app:cardCornerRadius="50dp"
                    app:layout_constraintLeft_toLeftOf="@id/cart"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txt_cartNoti"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <ImageView
                android:id="@+id/message"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/messenger"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back_24"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="Categories"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"></TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sneaker"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/top"
        android:layout_marginTop="10dp"
        android:background="#F6F3F3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_sneaker"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:src="@drawable/nike_1"></ImageView>

        <TextView
            android:id="@+id/txt_sneaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sneakers"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/texts230"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="(230)"
            android:textColor="#8C8383"
            android:textSize="24dp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/imgdetail"
            android:layout_width="60dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_marginLeft="55dp"
            android:src="@drawable/ic_arrow_right_24dp"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/centernext"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/sneaker"
        android:layout_marginTop="3dp"
        android:background="#F6F3F3"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:src="@drawable/sandal"></ImageView>

        <TextView
            android:id="@+id/textsandal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sandals"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/texts100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="(100)"
            android:textColor="#8C8383"
            android:textSize="24dp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:layout_width="57dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:src="@drawable/ic_arrow_right_24dp"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/centernext2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/centernext"
        android:layout_marginTop="3dp"
        android:background="#F6F3F3"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:src="@drawable/boott"></ImageView>

        <TextView
            android:id="@+id/textBoot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Boots"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/text50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="(50)"
            android:textColor="#8C8383"
            android:textSize="24dp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp"
            android:src="@drawable/ic_arrow_right_24dp"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/centernext3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/centernext2"
        android:layout_marginTop="3dp"
        android:background="#F6F3F3"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:src="@drawable/stiletto"></ImageView>

        <TextView
            android:id="@+id/textStilettos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Stilettos"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/text30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="(30)"
            android:textColor="#8C8383"
            android:textSize="24dp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:src="@drawable/ic_arrow_right_24dp"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/centernext5"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/centernext4"
        android:layout_marginTop="3dp"
        android:background="#F6F3F3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:text="All Products"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/text433"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="(433)"
            android:textColor="#8C8383"
            android:textSize="24dp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="105dp"
            android:src="@drawable/ic_arrow_right_24dp"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/centernext4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/centernext3"
        android:layout_marginTop="3dp"
        android:background="#F6F3F3"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:src="@drawable/flatss"></ImageView>

        <TextView
            android:id="@+id/textFlats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Flats"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/text23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="(23)"
            android:textColor="#8C8383"
            android:textSize="24dp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="118dp"
            android:src="@drawable/ic_arrow_right_24dp"></ImageView>
    </LinearLayout>

