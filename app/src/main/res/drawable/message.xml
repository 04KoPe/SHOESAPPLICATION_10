<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Màu đen cho nền -->
            <corners android:radius="50dp"/>
            <stroke android:color="#000000" android:width="0.5dp" /> <!-- Màu đen cho viền, bạn có thể điều chỉnh độ rộng ở đây -->
        </shape>
    </item>
    <item android:right="0dp" android:left="0dp" android:top="0dp" android:bottom="0dp">
        <shape
            android:shape="rectangle">
            <corners android:radius="50dp"/>
            <solid android:color="#FFFFFF" /> <!-- Màu nền bên trong viền, bạn có thể điều chỉnh màu ở đây -->
        </shape>
    </item>
</layer-list>
